            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/dark_blue"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Rlayout">

            <TextView
